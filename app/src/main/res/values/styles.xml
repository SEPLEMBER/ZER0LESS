<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- LIGHT (Olive) -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_light</item>
        <item name="colorAccent">@color/accent_light</item>

        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColor">@color/text_light</item>

        <item name="buttonStyle">@style/ButtonLight</item>
    </style>

    <!-- DARK (Purple) -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent_dark</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColor">@color/text_dark</item>

        <item name="buttonStyle">@style/ButtonDark</item>
    </style>

    <!-- AMOLED (Orange) -->
    <style name="AppTheme.Amoled" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary_amoled</item>
        <item name="colorPrimaryDark">@color/primary_amoled</item>
        <item name="colorAccent">@color/accent_amoled</item>

        <item name="android:windowBackground">@color/background_amoled</item>
        <item name="android:textColor">@color/text_amoled</item>

        <item name="buttonStyle">@style/ButtonAmoled</item>
    </style>


    <!-- BUTTONS -->
    <style name="ButtonLight" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/accent_light</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="ButtonDark" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/accent_dark</item>
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="ButtonAmoled" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/accent_amoled</item>
        <item name="android:textColor">@color/text_amoled</item>
    </style>

</resources>
